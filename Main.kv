#: import NavigationDrawer navdrawer
<Sc1>:
    Calculator:

<Sc2>:
    NavigationDrawer:
        pos_hint: {'x':0, 'y':0.5}
        id: nav_drawer_2
        anim_type: 'slide_above_anim'
        opening_transition: 'linear'
        closing_transition: 'linear'
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Calculator"
                background_color: 0, 0, 0, 0
                on_press: nav_drawer_2.toggle_state(True)
                on_press: root.manager.current="Calculator"
            Button:
                text: "Graphics"
                on_press: nav_drawer_2.toggle_state(True)
                background_color: 0, 0, 0, 0
            Button:
                text: "Converter"
                on_press: nav_drawer_2.toggle_state(True)
                on_press: root.manager.current="Converter"
                background_color: 0, 0, 0, 0
            Button:
                text: "About"
                on_press: nav_drawer_2.toggle_state(True)
                on_press: root.manager.current="About"
                background_color: 0, 0, 0, 0

        ##################################################

        BoxLayout:
            id: graphic
            orientation: "vertical"
            spacing: 5
            padding: 5
            BoxLayout:
                size_hint_y: None
                height: "55dp"
                padding: 8
                Butt:
                    on_press: nav_drawer_2.toggle_state()
                    size_hint: 0.05, 1
                Button:
                    text: '[b]TRIGOMA[/b]'
                    markup: True
                    background_color: 0, 0, 0, 0
                    on_press: root.manager.current="Calculator"
                Widget:
                    size_hint: 0.05, 1


